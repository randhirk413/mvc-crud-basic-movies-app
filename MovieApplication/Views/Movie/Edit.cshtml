@model MovieApplication.ViewModels.MovieVM

@{
    ViewData["Title"] = "Edit";
}

<div class="card mt-5">
    <form asp-action="Edit">
        <div class="card-header bg-light text-secondary">Update Movie</div>
        <div class="card-body">
            <div class="form-group mb-2">
                <div class="row">
                    <input type="hidden" asp-for="MovieId"/>
                    <div class="col-md-2">
                        <label asp-for="Title" class="control-label"></label>
                    </div>
                    <div class="col-md-10">
                        <input asp-for="Title" class="form-control form-control-sm" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mb-2">
                <div class="row">
                    <div class="col-md-2">
                        <label asp-for="ReleaseDate" class="control-label"></label>
                    </div>
                    <div class="col-md-10">
                        <input asp-for="ReleaseDate" type="date" class="form-control form-control-sm" />
                        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mb-2">
                <div class="row">
                    <div class="col-md-2">
                        <label asp-for="GenreId" class="control-label"></label>
                    </div>
                    <div class="col-md-10">
                        <select asp-for="GenreId" class="form-control form-control-sm" asp-items="ViewBag.GenreId">
                            <option value="">-- Select Genre --</option>
                        </select>
                        <span asp-validation-for="GenreId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label asp-for="Price" class="control-label"></label>
                    </div>
                    <div class="col-md-10">
                        <input asp-for="Price" class="form-control form-control-sm" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a class="btn btn-sm btn-danger" asp-action="Index">Back to list</a>
            <input type="submit" value="Update" class="btn btn-sm btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

